<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_start_date_textview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntrantAndOrganizerFragments.createEvent">

    <LinearLayout
        android:id="@+id/event_card_layout_org_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:background="@color/mainBackground"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/event_poster"
            android:layout_width="match_parent"
            android:layout_height="152dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:fontFamily="sans-serif"
            android:text="Event Name:"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/OrgViewEventName"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:fontFamily="sans-serif"
            android:text="Event Name Goes Here"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/OrgViewEventDescriptionNonEdit"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="Event Description:"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/OrgViewEventDescription"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:text="Event Description In Here"
            android:textAlignment="center" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>