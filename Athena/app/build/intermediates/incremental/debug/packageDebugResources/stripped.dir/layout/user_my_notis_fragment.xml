<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/mainBackground"
    tools:context=".EntrantAndOrganizerFragments.userViewNotisFragment">

    <TextView
        android:id="@+id/user_notis_title_non_edit"
        android:layout_width="405dp"
        android:layout_height="97dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="serif"
        android:text="WILL DISPLAY A LIST OF THE USER'S NOTIFICATIONS"
        android:textAlignment="center"
        android:textColor="@color/title_text_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />
    <ListView
        android:id="@+id/user_notifications_listview"
        android:layout_width="406dp"
        android:layout_height="783dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_notis_title_non_edit" />


</androidx.constraintlayout.widget.ConstraintLayout>